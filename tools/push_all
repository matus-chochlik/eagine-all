repo_root=$(realpath $(dirname ${0})/..)
remote=origin
branch=develop

function print_usage() {
	printf "Usage: %s [-r <remote>] [-b <branch>]\n" "$(basename ${0})"
}

while getopts "r:b:" optname
do
	case ${optname} in
		r) remote="${OPTARG}";;
		b) branch="${OPTARG}";;
		?) print_usage
			exit 1;;
	esac
done

for repo_dir in "${repo_root}" "${repo_root}/submodules/eagine-"*
do
	pushd "${repo_dir}"
	git checkout "${branch}" &&\
	git push "${remote}" "${branch}"
	popd
done
